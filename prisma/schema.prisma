generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id      Int     @id @default(autoincrement())
  email   String  @unique
  name    String?
  password String?
  role    String   @default("admin")
}
model Room {
  id          Int       @id @default(autoincrement())
  number      String    @unique
  type        String
  capacity    Int
  price       Float
  reservations Reservation[]
}

model Guest {
  id           Int       @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String    @unique
  phone        String?
  reservations Reservation[]
}

model Reservation {
  id        Int      @id @default(autoincrement())
  room      Room     @relation(fields: [roomId], references: [id])
  roomId    Int
  guest     Guest    @relation(fields: [guestId], references: [id])
  guestId   Int
  checkIn   DateTime
  checkOut  DateTime
  status    String   // npr. "pending", "confirmed", "cancelled"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



